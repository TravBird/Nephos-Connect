{
  "name": "Nephos-Connect",
  "author": "Travis Bird",
  "version": "0.1.0",
  "main": "main.js",
  "build": {
    "appId": "nephos.conect",
    "icon": "./icons/icon.png",
    "mac": {
      "category": "public.app-category.developer-tools"
    },
    "linux": {
      "target": "AppImage"
    }
  },
  "devDependencies": {
    "electron": "^22.0.1",
    "electron-builder": "^23.6.0"
  },
  "scripts": {
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "start": "APP_DEV=true electron ."
  },
  "postinstall": "electron-builder install-app-deps"
}
